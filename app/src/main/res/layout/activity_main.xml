<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/main_act"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_color">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:padding="10dp"
        android:background="@drawable/background_color">

        <ImageView
            android:id="@+id/menu_icon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/button"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HOME"
            android:fontFamily="@font/vollkorn"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:layout_centerInParent="true" />

        <ImageView
            android:id="@+id/notification_icon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/notification"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginVertical="10dp"
        android:background="#D9D9D9">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="6dp"
        android:layout_weight="4"
        android:gravity="center_vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="2dp"
            android:orientation="horizontal"
            android:background="@drawable/corner_style">

        <EditText
            android:id="@+id/search_field"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="48dp"
            android:hint="Search a specific post or item here..."
            android:padding="4dp"
            android:textSize="12sp"
            android:background="@android:color/transparent"
            android:fontFamily="@font/vollkorn"
            android:layout_marginStart="6dp"
            android:textColorHint="@color/white" />

        <ImageButton
            android:id="@+id/search_button"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:src="@drawable/search"
            android:background="@null" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/filter_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/corner_style"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:fontFamily="@font/vollkorn"
                android:text="Filter" />

        </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/filter_lay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:visibility="gone"
            android:layout_marginTop="6dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="2dp"
            android:orientation="horizontal"
            android:background="@drawable/corner_style">

            <EditText
                android:id="@+id/category_field"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="48dp"
                android:hint="Select Category..."
                android:background="@android:color/transparent"
                android:padding="4dp"
                android:textSize="12sp"
                android:fontFamily="@font/vollkorn"
                android:layout_marginStart="6dp"
                android:textColorHint="@color/white" />

            <ImageButton
                android:id="@+id/drop_button"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:layout_marginEnd="14dp"
                android:src="@drawable/drop"
                android:background="@null" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/found_fil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Found"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:layout_marginEnd="2dp"
                android:fontFamily="@font/vollkorn"
                android:background="@drawable/corner_style"/>

        </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/not_found_fil"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:background="@drawable/corner_style"
                    android:fontFamily="@font/vollkorn"
                    android:text="Not Found" />

            </LinearLayout>
        </LinearLayout>
        </LinearLayout>

    </LinearLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/rounded_ll">

        <LinearLayout
            android:id="@+id/post_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

        </LinearLayout>
    </ScrollView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="4dp"
        android:background="@drawable/background_color">

        <LinearLayout
            android:orientation="vertical"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@null"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/post"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/rounded_ll"
                android:orientation="vertical">
            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/post"
                android:layout_gravity="center"
                android:layout_weight="1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="POST"
                android:fontFamily="@font/vollkorn"
                android:textColor="#2F6D80"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:textSize="16sp" />
        </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/report"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/rounded_ll"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/report"
                    android:layout_gravity="center"
                    android:layout_weight="1"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="REPORT"
                    android:fontFamily="@font/vollkorn"
                    android:textColor="#2F6D80"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:textSize="16sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/profile"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/rounded_ll"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/profile"
                    android:layout_gravity="center"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/loggedInUser"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="PROFILE"
                    android:textColor="#2F6D80"
                    android:textStyle="bold"
                    android:visibility="gone"
                    android:fontFamily="@font/vollkorn"
                    android:layout_gravity="center"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/guest"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="SIGNUP"
                    android:textColor="#2F6D80"
                    android:textStyle="bold"
                    android:fontFamily="@font/vollkorn"
                    android:layout_gravity="center"
                    android:textSize="16sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>