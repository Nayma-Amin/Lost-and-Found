<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="8dp"
    android:layout_gravity="right"
    android:background="@drawable/rounded_ll"
    android:layout_width="250dp"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/option_hide"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mark as Read"
        android:gravity="center"
        android:textStyle="bold"
        android:background="@color/white"
        android:padding="10dp"
        android:layout_margin="5dp"
        android:textColor="#0E293E"
        android:fontFamily="@font/vollkorn"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/option_show"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Delete Notification"
        android:gravity="center"
        android:layout_margin="5dp"
        android:background="@color/white"
        android:textStyle="bold"
        android:padding="10dp"
        android:textColor="#0E293E"
        android:fontFamily="@font/vollkorn"
        android:textSize="16sp" />
</LinearLayout>
