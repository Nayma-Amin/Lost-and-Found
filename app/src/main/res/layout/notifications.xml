<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:layout_margin="10dp"
    android:background="@drawable/rounded_ll">

    <ImageView
        android:id="@+id/item_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginEnd="10dp"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/notification_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
       android:textColor="@color/black"
        android:padding="5dp"
        android:fontFamily="@font/vollkorn"
        app:layout_constraintTop_toTopOf="@id/item_image"
        app:layout_constraintStart_toEndOf="@id/item_image"
        app:layout_constraintEnd_toStartOf="@id/btnOption"/>

    <TextView
        android:id="@+id/time_text"
        android:layout_width="0dp"
        android:layout_height="29dp"
        android:textStyle="bold"
        android:textColor="#2F88FF"
        android:padding="5dp"
        app:layout_constraintTop_toBottomOf="@id/notification_text"
        app:layout_constraintStart_toEndOf="@id/item_image"
        app:layout_constraintEnd_toEndOf="@id/notification_text"
        app:layout_constraintBottom_toBottomOf="@id/item_image"/>

    <ImageButton
        android:id="@+id/btnOption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_more_vert"
        android:background="@android:color/transparent"
        app:layout_constraintStart_toEndOf="@id/notification_text"
        app:layout_constraintTop_toTopOf="@id/notification_text"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
