    <ImageButton
        android:id="@+id/menuOption"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:src="@drawable/button"
        android:paddingHorizontal="10dp"
        android:background="@null"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/greeting"
        android:contentDescription="Menu Options"/>

    <TextView
        android:id="@+id/greeting"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:text="Hello, ðŸ‘‹"
        android:fontFamily="@font/vollkorn"
        android:textColor="#FFFFFF"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/menuOption" />

    <TextView
        android:id="@+id/intro"
        android:layout_width="0dp"
        android:fontFamily="@font/vollkorn"
        android:layout_height="wrap_content"
        android:text="Welcome to Lost and Found app. By using our app, you agree to these Terms and Conditions. Please read them carefully."
        android:textColor="#129BBA"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/greeting"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ScrollView
        android:id="@+id/termsScroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="16dp"
        android:background="@android:color/transparent"
        app:layout_constraintTop_toBottomOf="@id/intro"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Terms and Conditions"
                android:fontFamily="@font/vollkorn"
                android:textSize="20sp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:layout_marginBottom="4dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/vollkorn"
                android:text="ðŸ•’ Last updated: 5 March 2025"
                android:textColor="#129BBA"
                android:textSize="13sp"
                android:layout_marginBottom="16dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1. Eligibility"
                android:fontFamily="@font/vollkorn"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/vollkorn"
                android:text="You must be 13 years or older to use this app.\nBy using the app, you confirm that you meet this requirement.\n\n"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/vollkorn"
                android:text="2. User Responsibilities"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/vollkorn"
                android:text="Provide accurate details for lost or found items.\nDo not post inappropriate, misleading, or offensive content. Do not impersonate another person or entity.\n\n"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/vollkorn"
                android:text="3. Item Ownership and Return"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/vollkorn"
                android:text="Users are responsible for verifying the ownership of items before returning them. The platform does not guarantee item recovery or authenticity of any claim.\n\n"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/vollkorn"
                android:text="4. Prohibited Uses"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/vollkorn"
                android:text="Prohibited Uses\nIllegal, fraudulent, or harmful activities\nHarassment or impersonation\nUploading malicious software or links\n\n"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/vollkorn"
                android:text="5. Content Rights"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/vollkorn"
                android:text="By posting content (text/images), you grant us the right to display it within the app. You retain ownership of your content.\n\n"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/vollkorn"
                android:text="6. Privacy"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/vollkorn"
                android:text="Please refer to our Privacy Policy to understand how we collect and use data."
                android:textColor="#FFFFFF"
                android:textSize="14sp" />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>


